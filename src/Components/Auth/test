import React, { useState } from 'react';
import Modal from '@mui/material/Modal';
import Box from '@mui/material/Box';
import Typography from '@mui/material/Typography';
import TextField from '@mui/material/TextField';
import Button from '@mui/material/Button';

function CreateCoursModal({ open, onClose, onAdd }) {
  const [newCourse, setNewCourse] = useState({
    moduleName: '',
    objectifs: '',
    className: '',
  });

  const handleInputChange = (event) => {
    const { name, value } = event.target;
    setNewCourse({
      ...newCourse,
      [name]: value,
    });
  };

  const handleAddCourse = () => {
    // Perform any logic you need to add a new course
    // Then, call the onAdd function to update the parent component's state
    onAdd(newCourse);
    // Clear the input fields
    setNewCourse({
      moduleName: '',
      objectifs: '',
      className: '',
    });
    // Close the modal
    onClose();
  };

  return (
    <Modal open={open} onClose={onClose}>
      <Box
        sx={{
          position: 'absolute',
          top: '50%',
          left: '50%',
          transform: 'translate(-50%, -50%)',
          width: 400,
          bgcolor: 'background.paper',
          boxShadow: 24,
          p: 4,
        }}
      >
        <Typography variant="h6" gutterBottom>
          Ajouter un nouveau cours
        </Typography>
        <TextField
          label="Module"
          name="moduleName"
          value={newCourse.moduleName}
          onChange={handleInputChange}
          fullWidth
          margin="normal"
        />
        <TextField
          label="Objectifs"
          name="objectifs"
          value={newCourse.objectifs}
          onChange={handleInputChange}
          fullWidth
          margin="normal"
        />
        <TextField
          label="Classe"
          name="className"
          value={newCourse.className}
          onChange={handleInputChange}
          fullWidth
          margin="normal"
        />
        <Button
          variant="contained"
          color="primary"
          onClick={handleAddCourse}
          disabled={!newCourse.moduleName || !newCourse.objectifs || !newCourse.className}
          sx={{ mt: 2 }}
        >
          Ajouter le cours
        </Button>
        <Button
          variant="contained"
          onClick={onClose}
          sx={{ mt: 2, ml: 2 }}
        >
          Annuler
        </Button>
      </Box>
    </Modal>
  );
}

export default CreateCoursModal;